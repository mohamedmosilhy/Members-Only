<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Members Only - Exclusive Community</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg">
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <!-- Header -->
        <header class="header">
            <div class="header-content">
                <a href="/" class="logo">üîê Members Only</a>

                <div class="user-info">
                    <% if (user) { %>
                        <span class="username">Hello, <strong>
                                <%= user.username %>
                            </strong>!</span>
                        <% if (user.is_admin) { %>
                            <span class="badge badge-admin">üëë Admin</span>
                            <a href="/create-message" class="btn btn-primary">Create Message</a>
                            <% } else if (user.is_member) { %>
                                <span class="badge badge-member">‚ú® Member</span>
                                <a href="/create-message" class="btn btn-primary">Create Message</a>
                                <% } %>
                                    <% if (!userIsMemberOrAdmin) { %>
                                        <a href="/join-club" class="btn btn-primary">Join Club</a>
                                        <% } %>
                                            <a href="/logout" class="btn btn-logout">Logout</a>
                                            <% } else { %>
                                                <a href="/login" class="btn btn-secondary">Login</a>
                                                <a href="/signup" class="btn btn-primary">Sign Up</a>
                                                <% } %>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div class="container">
            <section class="messages-section">
                <div class="section-header">
                    <h2 class="section-title">Community Messages</h2>
                </div>

                <% if (messages.length> 0) { %>
                    <div class="messages-grid">
                        <% messages.forEach((msg, index)=> { %>
                            <article class="message-card">
                                <h3 class="message-title">
                                    <%= msg.title %>
                                </h3>
                                <p class="message-content">
                                    <%= msg.content %>
                                </p>

                                <div class="message-footer">
                                    <% if (userIsMemberOrAdmin) { %>
                                        <div class="message-author">
                                            <div class="author-avatar">
                                                <%= msg.author.charAt(0).toUpperCase() %>
                                            </div>
                                            <span>by <strong>
                                                    <%= msg.author %>
                                                </strong></span>
                                        </div>
                                        <% } else { %>
                                            <div class="message-author">
                                                <span>üîí Join the club to see the author</span>
                                            </div>
                                            <% } %>

                                                <% if (user && user.is_admin) { %>
                                                    <form action="/delete-message/<%= msg.id %>" method="POST"
                                                        style="display: inline;"
                                                        onsubmit="return confirm('Are you sure you want to delete this message?');">
                                                        <button type="submit" class="btn-delete">üóëÔ∏è Delete</button>
                                                    </form>
                                                    <% } %>
                                </div>
                            </article>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <div class="empty-state">
                            <div class="empty-state-icon">üì≠</div>
                            <h3 class="empty-state-title">No messages yet</h3>
                            <p>Be the first to share something with the community!</p>
                        </div>
                        <% } %>
            </section>
        </div>
    </body>

</html>