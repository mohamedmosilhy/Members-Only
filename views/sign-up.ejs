<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign Up - Members Only</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg">
        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <!-- Header -->
        <header class="header">
            <div class="header-content">
                <a href="/" class="logo">üîê Members Only</a>
                <div class="user-info">
                    <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
                </div>
            </div>
        </header>

        <!-- Sign Up Form -->
        <div class="form-card">
            <h1 class="form-title">Join Our Community</h1>

            <% if (typeof message !=="undefined" ) { %>
                <div class="alert alert-error">
                    <%= message %>
                </div>
                <% } else { %>
                    <p class="form-description">
                        Create your account to start sharing messages with our exclusive community.
                    </p>
                    <% } %>

                        <form action="/sign-up" method="POST">
                            <div class="form-group">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" id="username" name="username" class="form-input"
                                    placeholder="Choose a unique username" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" id="password" name="password" class="form-input"
                                    placeholder="Create a strong password" required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-full">
                                Create Account
                            </button>
                        </form>

                        <div class="form-footer">
                            Already have an account? <a href="/login">Login here</a>
                        </div>
        </div>
    </body>

</html>